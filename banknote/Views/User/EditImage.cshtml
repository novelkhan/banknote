@model banknote.Models.Picture

@{
    ViewData["Title"] = "Edit Picture";
}

<h1>Edit Record</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditImage" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PictureName" class="control-label"></label>
                <input asp-for="PictureName" class="form-control" />
                <span asp-validation-for="PictureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="NoteValue" class="control-label"></label>
            <input asp-for="NoteValue" class="form-control" />
            <span asp-validation-for="NoteValue" class="text-danger"></span>
            </div>*@
            <div class="form-group mt-2">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyPictures">Back to List</a>
</div>

